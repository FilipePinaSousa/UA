	.data
prompt1: .asciiz "Introduza um numero\n"
result: .asciiz "O fatorial do numero inserido é: "

	.text
main:
	li $v0, 4
	la $a0, prompt1
	syscall
	
	li $v0, 5 #read_int()
	syscall
	move $t0, $v0	#guarda em $t0 o nº pedido
	
	li $t1,1
	
for: 
	ble $t0,$0,endfor #se i=n>=0 acaba o for
	
	mul $t1,$t1,$t0 #f=f*i
	
	subi $t0,$t0,1
	j for
	

endfor:

	li $v0, 4
	la $a0, result
	syscall
	
	li $v0,1
	move $a0,$t1
	syscall
	
	li $v0,10
	syscall
